<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="leban.nait.ca.finalproject.FinalProjectActivity"
    tools:showIn="@layout/main"
    android:orientation="vertical">


    <TextView
        android:id="@+id/dateAndTime"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />


    <TextClock
     android:id="@+id/currenttime"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_gravity="center"
        android:layout_below="@id/dateAndTime"/>

    <TextView
        android:id="@+id/chronotext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time Elapsed"
        android:layout_below="@id/currenttime"/>

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chrono"
        android:paddingTop="50dp"
        android:layout_below="@id/chronotext"/>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startbutton"
        android:text="Start"
        android:layout_below="@id/chrono"
        android:onClick="onClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resetbutton"
        android:text="Reset"
        android:layout_toRightOf="@id/startbutton"
        android:onClick="onClick"
        android:layout_below="@id/chrono"/>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pausebutton"
        android:text="Pause"
        android:layout_toRightOf="@id/resetbutton"
        android:onClick="onClick"
        android:layout_below="@id/chrono" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stopbutton"
        android:text="Stop"
        android:onClick="onClick"
        android:layout_toRightOf="@id/pausebutton"
        android:layout_below="@id/chrono" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/passoff"
        android:text="Pass"
        android:layout_below="@id/startbutton"
        android:onClick="onClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/finishbutton"
        android:text="Finish"
        android:layout_toRightOf="@id/passoff"
        android:layout_below="@id/startbutton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Steps Taken: "
        android:id="@+id/countlabel"
        android:layout_below="@id/passoff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stepcount"
        android:layout_toRightOf="@id/countlabel"
        android:layout_below="@id/passoff"
        android:text="0" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Results by"
        android:layout_below="@id/countlabel"
        android:id="@+id/resultstext"
        android:textAlignment="gravity" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewbytime"
        android:text="Time"
        android:layout_below="@id/resultstext"
        android:onClick="onClick" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewbysteps"
        android:text="Steps Made"
        android:layout_toRightOf="@id/viewbytime"
        android:layout_below="@id/resultstext"
        android:onClick="onClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/teamsetup"
        android:text="Team Setup"
        android:layout_toRightOf="@id/viewbysteps" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/totaltime"
        android:text="Total Time" />


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/laps"
        android:layout_below="@id/viewbytime" />


</RelativeLayout>
